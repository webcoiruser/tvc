<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_margin_normal"
    android:layout_marginStart="@dimen/activity_margin_normal"
    android:layout_marginEnd="@dimen/activity_margin_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/drop_info"
                android:padding="15dp"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Drop info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:id="@+id/tv_position"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="20"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:src="@drawable/car"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="100dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textColor="#FFFFFF"
                android:text="Drop\naddress"

                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_Mdrop"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text="8,4th Cross rd\nitnagar\nindia pouduchery"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:src="@drawable/car"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="100dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textColor="#FFFFFF"
                android:text="Contact\nnumber"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_dropper"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                  android:textColor="#FFFFFF"
                android:text="8,4th Cross rd\nitnagar\nindia pouduchery"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


