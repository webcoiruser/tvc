<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_profile_rect"
    android:layout_marginBottom="@dimen/activity_margin_normal"
    android:layout_marginStart="@dimen/activity_margin_normal"
    android:layout_marginEnd="@dimen/activity_margin_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/titillium_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/drop_info"
                android:layout_margin="15dp"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Drop info"/>
            <TextView
                android:fontFamily="@font/titillium_regular"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_position"
                android:gravity="right"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingRight="25dp"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text=""/>
              <LinearLayout

                  android:visibility="gone"
                  android:id="@+id/ll_postion_status"
                  android:background="@color/colorPrimary"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <TextView
                      android:fontFamily="@font/titillium_regular"

                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_position_status"
                      android:gravity="center"
                      android:textColor="#ffffff"
                      android:textAllCaps="false"
                      android:textSize="17dp"
                      android:textStyle="bold"
                      android:text="PENDING"/>
              </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:src="@drawable/car"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/titillium_regular"

                    android:layout_width="100dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/titillium_regular"

                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv_drop_personname"
                    android:textColor="#000000"
                    android:text=""
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:src="@drawable/car"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/titillium_regular"

                    android:layout_width="100dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:text="Mobile"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/titillium_regular"

                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#000000"
                    android:id="@+id/tv_drop_personmobile"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:src="@drawable/car"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/titillium_regular"

                    android:layout_width="100dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:id="@+id/tv_drop_parcel_name"
                    android:text="No of pallets/Box"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/titillium_regular"

                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#000000"
                    android:id="@+id/tv_drop_parcel_count"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:src="@drawable/car"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/titillium_regular"

                    android:layout_width="100dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:id="@+id/tv_drop_parcel_namebox"
                    android:text="No of pallets/Box"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/titillium_regular"

                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#000000"
                    android:id="@+id/tv_drop_parcel_countbox"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:src="@drawable/car"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/titillium_regular"

                    android:layout_width="100dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:text="Drop\naddress"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/titillium_regular"

                    android:id="@+id/tv_Mdrop"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:text=""
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:src="@drawable/car"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:fontFamily="@font/titillium_regular"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Pickup\nInstructions"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <TextView
                    android:fontFamily="@font/titillium_regular"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv_pick_specialinstpick"
                    android:textColor="#000000"
                    android:text=""
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:src="@drawable/car"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/titillium_regular"
                    android:text="Drop\nInstructions"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <TextView
                    android:fontFamily="@font/titillium_regular"
                    android:id="@+id/tv_instron"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:text=""
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:src="@drawable/car"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/titillium_regular"
                    android:text="Drop\Inside"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_drop_inside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    tools:text="@string/drofoffinfo_txt"
                    android:textColor="#000000"
                    android:fontFamily="@font/titillium_regular"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:src="@drawable/car"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/titillium_regular"
                    android:text="Drop\LiftGate"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_drop_liftgate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    tools:text="@string/drofoffinfo_txt"
                    android:textColor="#000000"
                    android:fontFamily="@font/titillium_regular"/>
            </LinearLayout>

            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:src="@drawable/car"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:fontFamily="@font/titillium_regular"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:text="Price"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:fontFamily="@font/titillium_regular"

                    android:text=""
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:id="@+id/tv_MPrice"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/delete"
                    android:backgroundTint="@color/black_color"
                    android:background="@drawable/delete"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


